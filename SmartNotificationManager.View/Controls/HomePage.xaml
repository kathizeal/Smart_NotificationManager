<Page
    x:Class="SmartNotificationManager.View.Controls.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:SmartNotificationManager.View.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <NavigationView
            x:Name="MainNavigationView"
            CompactModeThresholdWidth="320"
            IsBackButtonVisible="Collapsed"
            IsSettingsVisible="True"
            OpenPaneLength="280"
            PaneDisplayMode="Left"
            SelectionChanged="MainNavigationView_SelectionChanged">

            <Frame x:Name="ContentFrame" NavigationFailed="ContentFrame_NavigationFailed" />

        </NavigationView>


    </Grid>
</Page>
